{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "start",
			"problemMatcher": [],
			"label": "npm: start",
			"detail": "npx parcel ./src/index.html",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "start server",
			"type": "npm",
			"script": "start",
			"isBackground": true,
			"problemMatcher": {
				"owner": "custom",
				"pattern": {
					"regexp": "^$"
				},
				"background": {
					"activeOnStart": true,
					"beginsPattern": ".",
					"endsPattern": "."
				}
			}
		},
		{
			"label": "stop server",
			"command": "echo ${input:terminate}",
			"type": "shell"
		}
	],
	"inputs":[
		{
			"id": "terminate",
			"type": "command",
			"command": "workbench.action.tasks.terminate",
			"args": "terminateAll"
		}
	]
}